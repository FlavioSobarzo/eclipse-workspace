package Asistente;

public class Llamadas {
	String[] listaDeLlamadas = new String [3];
	double[] listaDeHoras = new double [3];
	boolean[] yaSeMostro = {false,false,false};

	public Llamadas(double hora, boolean ocupado){
		listaDeLlamadas[0]="Flavio";	
		listaDeLlamadas[1]="Camila";
		listaDeLlamadas[2]="Catalina";
		listaDeHoras[0]=51.40;	
		listaDeHoras[1]=52.00;
		listaDeHoras[2]=52.12;
		for(int i = 0; i <= 2; i = i + 1){
			if(hora == listaDeHoras[i] && yaSeMostro[i] == false) {
				if(ocupado==false) {
				 System.out.println("Te ha llamado: " + listaDeLlamadas[i]);
				 yaSeMostro[i] = true;
				}
			}
		
		}

	}
}
