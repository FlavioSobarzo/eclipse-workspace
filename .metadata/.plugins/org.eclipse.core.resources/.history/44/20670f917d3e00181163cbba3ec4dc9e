package Asistente;
import java.util.Scanner;
import java.util.Date;

public class Home {
	
	static Scanner in = new Scanner(System.in);
	static boolean ocupado = false;
	
	public static void main(String[] args) {
		String nombre;
		int mensaje;
		System.out.println("Â¿Como te llamas?");
		nombre = in.nextLine();
		System.out.println("Bienvenido " + nombre);
		
		while (true) { 
		Date tiempo = new Date();
		double segundo = tiempo.getSeconds();
	    int minuto = tiempo.getMinutes();
	    double horaActual = minuto + segundo/100;
	    System.out.println(horaActual);
	    Noticias horaNoticia = new Noticias(segundo,ocupado);
	    Llamadas horaLlamada = new Llamadas(segundo, ocupado);
		}
		keyPressed();
    }
	
	 public static void keyPressed() {
	        int x;
	        try {
	            x = in.nextInt();
	            if (x==1) {
	                System.out.println("You pressed the key 1");
	            ocupado = true;
	            }
	            if (x==0) {
	                System.out.println("You pressed the key 1");
	            ocupado = false;
	            }
	        }catch (Exception e) {
	            System.out.println("You haven't entered a number!!!");
	        } 
	 }
}