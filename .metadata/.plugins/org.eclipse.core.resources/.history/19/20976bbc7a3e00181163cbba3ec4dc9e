package Asistente;
import java.util.Scanner;
import java.util.Date;

public class Home {
	
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		boolean ocupado = false;
		String nombre;
		int mensaje;
		System.out.println("Â¿Como te llamas?");
		nombre = in.nextLine();
		System.out.println("Bienvenido " + nombre);
		
		while (true) { 
		Date tiempo = new Date();
		double segundo = tiempo.getSeconds();
	    int minuto = tiempo.getMinutes();
	    double horaActual = minuto + segundo/100;
	    System.out.println(horaActual);
	    Noticias horaNoticia = new Noticias(horaActual,ocupado);
	    Llamadas horaLlamada = new Llamadas(horaActual, ocupado);
	    	if(in.nextInt() == 1) {
	    	ocupado = true;
	    	}
	    	if(in.nextInt() == 0) {
	    	ocupado = false;
	    	}
		}
    }
}