
public class respuesta {

	public static void main(String[] args) {
		int i = 1;
		double d = 0.1;
		String s = "Hola";
		char c = 'c';
		boolean b = true;
		
		////////////////////////   9.2   //////////////////////////////////////
		System.out.println("int con double " + (i+d)); // Resultado double (adicion)
		System.out.println("int con String " + (i+s)); // Resultado String (concadenacion)
		System.out.println("int con char " + (i+c)); // Resultado int (adicion)
		// System.out.println("int con boolean " + (i+b)); //Invalido
		System.out.println("double con String " + (d+s)); //Resultado String (concadenacion)
		System.out.println("double con char " + (d+c)); //Resultado double (adicion)
		// System.out.println("double con boolean " + (d+b)); //Invalido 
		System.out.println("String con char " + (s+c)); //Resultado String (concadenacion)
		System.out.println("String con boolean " + (s+b)); //Resultado String (concadenacion)
		// System.out.println("char con boolean " + (c+b)); //Invalido

		
		
		//////////////////////   9.4   //////////////////////
		c = c+1;
		System.out.println("char++ " + c);
	}

}
