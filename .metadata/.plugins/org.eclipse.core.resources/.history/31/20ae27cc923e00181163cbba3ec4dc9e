import java.util.Scanner;

public class Parentecis {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("Escribe una oracion con parentesis");
		String frase = in.nextLine();
		System.out.println(CuantosParentesis(frase));
	}
	public static int CuantosParentesis(String frase) {
		int count = 0;
		for (int i = 0; i < frase.length(); i++) {
		char c = frase.charAt(i);
		if (c == '(') {
		count++;
		} else if (c == ')') {
		count--;
		}
		}
		return count;
	}
}
